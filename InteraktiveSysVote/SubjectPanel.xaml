<UserControl x:Class="InteraktiveSysVote.SubjectPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InteraktiveSysVote"
            mc:Ignorable="d"  d:DesignHeight ="500" d:DesignWidth="500"
             
             HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
             >
    <Border BorderThickness="0,0,0,1" BorderBrush="Black" HorizontalAlignment="Stretch">

        <Grid Background="White">
            <!-- Important Subject Information -->
            <Grid HorizontalAlignment="Stretch" Margin="0,20,0,0">
                <!-- Layout -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Static Content-->
                <!-- Name of Subject -->
                <Label Grid.Row="1" Grid.Column="0" Content="Votiert:" FontSize="20"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Vorträge:" FontSize="20"/>
                <Label Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" Content="benötigt:" FontSize="20"/>
                <Label Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Center" Content="von" FontSize="20"/>
                <!--Changable Content-->
                <Label x:Name="avgVoted" Content="0%" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="1" />
                <Label x:Name="presented" Content="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="2" Grid.Column="1"/>
                <Label x:Name="goalVoted" Content="66%" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="3"/>
                <Label x:Name="GoalPresent" Content="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="2" Grid.Column="3"/>
                <!-- Buttons -->
                <Button x:Name="editSubjectBtn" FontSize="20" BorderBrush="LightGray" Background="White" Content="EDIT" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="75" Click="EditSubjectBtn_Click" Grid.ColumnSpan="2"/>
                <Button x:Name="deleteSubjectBtn" FontSize="20" BorderBrush="LightGray" Background="White" Content="Löschen" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="75" Click="DeleteSubjectBtn_Click" Grid.ColumnSpan="2"/>
                <Button x:Name="OpenExerciseWindowBtn" FontSize="20" BorderBrush="LightGray" Background="White" Content="Fach" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="OpenExerciseWindowBtn_Click" Height="Auto" HorizontalContentAlignment="Stretch"/>

            </Grid>
        </Grid>
    </Border>
</UserControl>
